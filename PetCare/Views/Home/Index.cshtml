@model Usuario;
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Login";
}

<section class="conteudo">
    <div class="formulario">
        <div class="logo">
            <div class="wrapper-logo">
                <img src="~/assets/logotipo.png" alt="PetCare">
            </div>
        </div>
        <form action="/Home/Login" method="POST">
            <div class="titulo">
                <h3>Acesse sua conta</h3>
            </div>
            <div class="campos">
                <div class="campo">
                    <input type="email" asp-for="email" name="email" placeholder="E-mail" required>
                </div>
                <div class="campo">
                    <input type="password" asp-for="senha" name="senha" placeholder="Senha" required>
                </div>
                <h5>
                    Ainda não é cadastrado? <u>
                        <a href="/Home/CadastroUsuario">
                            Crie já sua
                            conta.
                        </a>
                    </u>
                </h5>
            </div>
            <button id="bt-login">Login</button>
            <div class="msg-info">@ViewBag.MsgErroLogin</div>
        </form>
    </div>
    <div class="banner">
        <div class="wrapper-banner">
            <img src="~/assets/banner.jpg" alt="">
        </div>
    </div>
</section>